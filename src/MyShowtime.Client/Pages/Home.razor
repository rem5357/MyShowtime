        if (selectedEpisodeIds.Count <= 1) return false;

        var selectedEpisodes = episodes.Where(e => selectedEpisodeIds.Contains(e.Id)).ToList();
        return selectedEpisodes.Count > 0 && selectedEpisodes.All(e => e.WatchState == state);
